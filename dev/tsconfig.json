{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "src/web/build",
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/web/scripts/**/*.ts" // Include all TS files in scripts folder and subfolders
  ]

}